# Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/cookie_scanner
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_DECODE_RESPONSES=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_REQUEST_TIMEOUT=300

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-here-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1
API_KEY_SALT=your-api-key-salt-here-min-16-chars
PASSWORD_MIN_LENGTH=8

# Scan Configuration
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT_SECONDS=300
BROWSER_POOL_SIZE=5
SCAN_MAX_DEPTH_DEFAULT=5
SCAN_MAX_RETRY_DEFAULT=3
DEFAULT_BUTTON_SELECTOR=button[data-role="accept"]

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_USE_TLS=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
WEBHOOK_TIMEOUT=10
NOTIFICATION_MAX_RETRIES=3

# Cache Configuration
CACHE_TTL_SCAN_RESULT=300
CACHE_TTL_ANALYTICS_METRICS=3600
CACHE_TTL_ANALYTICS_TRENDS=3600
CACHE_TTL_USER_PREFERENCES=1800
CACHE_ENABLED=true

# Monitoring Configuration
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=
ENABLE_METRICS=true

# Legacy API URLs (for backward compatibility)
API_URL=http://172.174.5.76:8880/idredact_enterprise_onprem_mw/get_cookie_scheduler_info
RESULT_API_URL=http://172.174.5.76:8880/idredact_enterprise_onprem_mw/save_domain_scan_result
FETCH_COOKIE_CATEGORIZATION_API_URL=http://172.174.5.76:8880/idredact_enterprise_onprem_mw/get_domain_cookie_categorization
